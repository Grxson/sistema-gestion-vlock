{
  "name": "vlock-sistema-gestion",
  "version": "2.0.0",
  "description": "Vlock Sistema de Gestión",
  "main": "src/main/index.js",
  "homepage": "https://vlock.com",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron . --no-sandbox",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "prepare-icons": "node prepare-icons.js",
    "dist": "npm run prepare-icons && npm run build && electron-builder --publish=never",
    "dist:win": "npm run prepare-icons && npm run build && electron-builder --win --publish=never",
    "dist:mac": "npm run prepare-icons && npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run prepare-icons && npm run build && electron-builder --linux --publish=never",
    "dist:all": "npm run prepare-icons && npm run build && electron-builder --win --linux --publish=never"
  },
  "keywords": ["vlock", "gestion", "nomina", "proyectos", "suministros"],
  "author": "Vlock",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.1",
    "wait-on": "^8.0.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.3.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.2"
  },
  "build": {
    "appId": "com.vlock.sistema-gestion",
    "productName": "Vlock Sistema de Gestión",
    "copyright": "Copyright © 2025 Vlock",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "src/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "maintainer": "Vlock",
      "vendor": "Vlock",
      "synopsis": "Sistema de Gestión Empresarial"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
